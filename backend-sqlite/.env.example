# ===== BASIC CONFIGURATION =====
NODE_ENV=development
PORT=3000
JWT_SECRET=your-super-secret-jwt-key-min-32-characters-long-for-production
JWT_EXPIRES_IN=24h
FRONTEND_URL=http://localhost:3000

# ===== EMAIL CONFIGURATION =====
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=your-email@gmail.com

# ===== SECURITY RATE LIMITING CONFIGURATION =====
# Login Protection (milliseconds and max attempts)
LOGIN_WINDOW_MS=900000
LOGIN_MAX_REQUESTS=5

# Registration Protection  
REGISTER_WINDOW_MS=3600000
REGISTER_MAX_REQUESTS=3

# Email Verification Protection
EMAIL_VERIFY_WINDOW_MS=600000
EMAIL_VERIFY_MAX_REQUESTS=10

# Password Reset Protection
PASSWORD_RESET_WINDOW_MS=3600000
PASSWORD_RESET_MAX_REQUESTS=2

# General API Protection
GENERAL_WINDOW_MS=60000
GENERAL_MAX_REQUESTS=120

# ===== BOT PROTECTION CONFIGURATION =====
# Form Timing Protection (milliseconds)
MIN_FORM_TIME_MS=3000
MAX_FORM_TIME_MS=3600000

# Feature Toggles (true/false)
ENABLE_HONEYPOT=true
ENABLE_TIMING=true
ENABLE_USER_AGENT=true

# Honeypot Fields (comma-separated, NO SPACES!)
HONEYPOT_FIELDS=website,email_confirm,phone,url,homepage,fax

# ===== SECURITY SCORING CONFIGURATION =====
# Security score thresholds (0-100)
SECURITY_BLOCK_THRESHOLD=30
SECURITY_SUSPICIOUS_THRESHOLD=60
SECURITY_HIGH_THRESHOLD=80

# ===== CLEANUP INTERVALS CONFIGURATION =====
# Rate Limiting cleanup (milliseconds)
RATE_LIMIT_CLEANUP_INTERVAL=1800000

# Bot Protection cleanup (milliseconds)  
BOT_PROTECTION_CLEANUP_INTERVAL=7200000

# Monitoring cleanup (milliseconds)
MONITORING_CLEANUP_INTERVAL=7200000

# ===== ADVANCED SECURITY SETTINGS =====
# IP Blocking Configuration
MAX_FAILED_ATTEMPTS_BEFORE_IP_BLOCK=10
IP_BLOCK_DURATION_MS=86400000

# Security Headers Configuration
ENABLE_CSP=true
ENABLE_HSTS=true
CSP_REPORT_URI=https://your-domain.com/csp-report

# ===== DATABASE CONFIGURATION =====
DB_PATH=./todos.db
DB_BACKUP_INTERVAL_MS=86400000
DB_MAX_CONNECTIONS=10

# ===== LOGGING CONFIGURATION =====
LOG_LEVEL=info
ENABLE_SECURITY_LOGGING=true
ENABLE_PERFORMANCE_LOGGING=true
LOG_RETENTION_DAYS=30